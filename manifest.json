{
	"manifest_version": 2,

	"name": "Anime Info",
	"description": "Fetch Anime information from MyAnimeList",
	"version": "1.0",
	"developer": {
		"name": "Irfan",
		"url": "http://irfan.dahir.co"
	},
	"homepage_url": "https://jikan.me",
	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	"permissions": ["tabs"],
	"browser_action": {
		//"default_icon": "icon.png",
		"default_title": "Lookup any Anime",
		"default_popup": "popup.html"
	}
}