{
	"manifest_version": 2,

	"name": "Anime Info",
	"description": "Fetch Anime information from MyAnimeList",
	"version": "1.0.1",
	"homepage_url": "https://jikan.me",
	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	"permissions": [
		"tabs",
		"https://myanimelist.net/",
		"https://*.jikan.me/",
		"https://api.jikan.me/"
	],
	"browser_action": {
		"default_title": "Search for an Anime",
		"default_popup": "popup.html"
	}
}